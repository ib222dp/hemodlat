{% extends 'base.html.twig' %}

{% block body %}

    {% include ('Shared/loginmenu.html.twig') %}

    <div class="row">

        {% include ('Shared/profilemenu.html.twig') %}

        <div class="col-md-6 col-md-offset-3">

            {% for update in updates %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <p>{{ update.appUser.firstName }} {{ update.appUser.lastName }}</p>
                        <p class="text-muted"><small>{{ update.creationDate|date('Y-m-d H:i:s') }}</small></p>
                    </div>

                    <div class="panel-body">
                        <p>{{ update.message }}</p>
                    </div>

                    <div class="panel-footer">
                        {% for comment in update.comments %}
                            <p>{{ comment.appUser.firstName }} {{ comment.appUser.lastName }}</p>
                            <p class="text-muted"><small>{{ comment.creationDate|date('Y-m-d H:i:s') }}</small></p>
                            <p>{{ comment.message }}</p>
                        {% endfor %}

                        <form name="input" action="{{ path('comment_create', {'slug': update.id}) }}" method="post">
                            <div class="form-group">
                                <input name="message" class="form-control" />
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" value="Lägg till kommentar" class="btn btn-primary">
                            </div>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <form name="input3" action="{{ path('deletefriendform', {'slug': app_user.id}) }}" method="post">
                <input type="submit" name="submit" value="Sluta vara vän" class="btn btn-primary">
            </form>
        </div>
    </div>

{% endblock %}