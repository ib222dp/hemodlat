{% extends 'base.html.twig' %}

{% block body %}

    {% include ('Shared/loginmenu.html.twig') %}

    <div class="row">
        <div class="h1">

        </div>

        <div class="col-md-3">
            {% include ('Shared/profilemenu.html.twig') %}
        </div>

        <div class="col-md-6 col-md-offset-3">

            <div class="well">

                {{ form_start(form, {'attr': {'class': 'bs-example form-horizontal', 'role': 'form'}}) }}
                <fieldset>
                    <legend>Byt lösenord</legend>
                    {{ form_errors(form) }}

                    <div class="form-group">
                        {{ form_label(form.oldPassword, 'Lösenord', {'label_attr': {'class': 'col-md-5 control-label'}}) }}
                        <div class="col-md-7">
                            {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.oldPassword) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.newPassword.first, 'Nytt lösenord', {'label_attr': {'class': 'col-md-5 control-label'}}) }}
                        <div class="col-md-7">
                            {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.newPassword.first) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.newPassword.second, 'Bekräfta nytt lösenord', {'label_attr': {'class': 'col-md-5 control-label'}}) }}
                        <div class="col-md-7">
                            {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.newPassword.second) }}
                        </div>
                    </div>
                </fieldset>

                <div class="row">
                    <div class="col-md-12">
                        <div class="pull-right">
                            <button type="Submit" class="btn btn-primary">Skicka</button>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
