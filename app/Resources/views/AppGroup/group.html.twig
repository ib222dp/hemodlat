{% extends 'base.html.twig' %}

{% block body %}

    {% include ('Shared/loginmenu.html.twig') %}

    <div class="row">
        <div class="h1">

        </div>

        <div class="col-md-3">
            {% include ('Shared/groupSidebar.html.twig') %}
        </div>

        <div class="col-md-6 col-md-offset-3">
            {% for update in updates %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <ul class="media-list">
                            <li class="media">
                                <a href="#" class="media-left">
                                    <img src="{{ app.request.scheme ~ '://' ~ app.request.host ~ '/' ~ update.appUser.profilePicture.webPath }}"
                                         class="media-object img-rounded" height="50px" width="50px"/>
                                </a>
                                <div class="media-body">
                                    <h3 class="media-heading">{{ update.appUser.username }}</h3>
                                    <p class="text-muted">{{ update.creationDate|date('Y-m-d H:i:s') }}</p>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="panel-body">
                        <p>{{ update.message|nl2br }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}