{% extends 'base.html.twig' %}

{% block body %}

    {% include ('Shared/loginmenu.html.twig') %}

    <div class="row">
        <div class="col-md-6">
            <div class="well">

                {{ form_start(form, {'attr': {'class': 'bs-example form-horizontal', 'role': 'form'}}) }}
                <fieldset>
                    <legend>Ny grupp</legend>
                    {{ form_errors(form) }}

                    <div class="form-group">
                            {{ form_label(form.appGroup.name, 'Namn', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                        <div class="col-md-10">
                            {{ form_widget(form.appGroup.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.appGroup.name) }}
                        </div>
                    </div>

                    <div class="form-group">
                            {{ form_label(form.appGroup.name, 'Beskrivning', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                        <div class="col-md-10">
                            {{ form_widget(form.appGroup.description, {'attr': {'class': 'form-control', 'rows': '10', 'cols': '30'}}) }}
                            {{ form_errors(form.appGroup.description) }}
                        </div>
                    </div>
                </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}