{% extends 'base.html.twig' %}

{% block body %}

    {% include ('Shared/loginmenu.html.twig') %}

    <div class="row">
        <div class="h1">

        </div>

        <div class="col-md-12">
            <div class="row">
                {% for item in app_groups %}
                    <div class="list-group col-md-4">
                        <a href="{{ path('group_show', {'slug': item.id}) }}" class="list-group-item">
                            <h4 class="list-group-item-heading">{{ item.name }} </h4>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="span4">
            {%if total_pages > 0%}
                <div class="pagination">
                    <ul>
                        {%for i in 1..total_pages%}
                            {%if loop.first %}
                                <li class="prev {%if current_page==1%} disabled{%endif%}"><a href="{{path('groups',{'page':current_page-1})}}">← Tidigare</a></li>
                            {%endif%}
                            <li {%if current_page==loop.index%} class="active"{%endif%}><a href="{{path('groups',{'page':loop.index})}}">{{loop.index}}</a></li>

                            {%if loop.last %}
                                <li class="next{%if current_page==total_pages%} disabled {%endif%}"><a href="{{path('groups',{'page':current_page+1})}}">Nästa → </a></li>
                            {%endif%}
                        {%endfor%}
                    </ul>
                </div>
            {%endif%}
        </div>
    </div>


{% endblock %}