{% for update in updates %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <ul class="media-list">
                <li class="media">
                    <a href="#" class="media-left">
                        <img src="{{ app.request.scheme ~ '://' ~ app.request.host ~ '/' ~ update.appUser.profilePicture.webPath }}"
                             class="media-object img-rounded" height="50px" width="50px"/>
                    </a>
                    <div class="media-body">
                        <h3 class="media-heading">{{ update.appUser.username }}</h3>
                        <p class="text-muted">{{ update.creationDate|date('Y-m-d H:i:s') }}</p>
                    </div>
                </li>
            </ul>
        </div>

        <div class="panel-body">
            <p>{{ update.message|nl2br }}</p>
        </div>

        <div class="panel-footer">
            <ul class="media-list">
                {% for comment in update.comments %}
                    <li class="media">
                        <a href="#" class="media-left">
                            <img src="{{ app.request.scheme ~ '://' ~ app.request.host ~ '/' ~ comment.appUser.profilePicture.webPath }}"
                                 class="media-object img-rounded" height="50px" width="50px"/>
                        </a>
                        <div class="media-body">
                            <p class="media-heading"><strong>{{ comment.appUser.username }}</strong>
                            <small class="text-muted">{{ comment.creationDate|date('Y-m-d H:i:s') }}</small>
                            </p>
                            <p>{{ comment.message }}</p>
                        </div>
                    </li>
                {% endfor %}
            </ul>

            <form name="input" action="{{ path('comment_create', {'slug': update.id}) }}" method="post">
                <div class="form-group">
                    <input type="text" name="message" class="form-control" required=""/>
                </div>
                <div class="form-group">
                    <input type="submit" name="submit" value="LÃ¤gg till kommentar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
{% endfor %}
