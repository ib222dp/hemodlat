{% extends 'base.html.twig' %}

{% block body %}

    {% include ('Shared/loginmenu.html.twig') %}

    <div class="row">
        <div class="col-md-3">
            <a href="{{ path('status_update_register') }}">Skapa ny statusuppdatering</a>
        </div>

        <div class="col-md-6 col-md-offset-3">
            {% for update in updatesArray %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <p>{{ update.appUser.username }}</p>
                        <p class="text-muted"><small>{{ update.creationDate|date('Y-m-d H:i:s') }}</small></p>
                    </div>

                    <div class="panel-body">
                        <p>{{ update.message }}</p>
                    </div>

                    <div class="panel-footer">
                        {% for comment in update.comments %}
                            <p>{{ comment.appUser.username }}</p>
                            <p class="text-muted"><small>{{ comment.creationDate|date('Y-m-d H:i:s') }}</small></p>
                            <p>{{ comment.message }}</p>
                        {% endfor %}

                        <form name="input" action="{{ path('comment_create', {'slug': update.id}) }}" method="post">
                            <div class="form-group">
                                <input type="text" name="message" class="form-control" required=""/>
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" value="LÃ¤gg till kommentar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
