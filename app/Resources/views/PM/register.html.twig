{% extends 'base.html.twig' %}

{% block body %}

    {% include ('Shared/loginmenu.html.twig') %}

    <div class="row">
        <div class="h1">

        </div>

        <div class="col-md-6 col-md-offset-6">

            <div class="well">

                {{ form_start(form, {'attr': {'class': 'bs-example form-horizontal', 'role': 'form'}}) }}
                <fieldset>
                    <legend>Svar</legend>
                    {{ form_errors(form) }}

                    <div class="form-group">
                        {{ form_label(form.message, 'Meddelande', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                        <div class="col-md-10">
                            {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': '10', 'cols': '30'}}) }}
                            {{ form_errors(form.message) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.recipients, 'Mottagare', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                        <div class="col-md-10">
                            {{ form_widget(form.recipients, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.recipients) }}
                        </div>
                    </div>
                </fieldset>

                <div class="row">
                    <div class="col-md-12">
                        <div class="pull-right">
                            <button type="Submit" class="btn btn-primary">Skicka</button>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}