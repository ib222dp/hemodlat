{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData) }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="username" class="control-label col-xs-2">Användarnamn:</label>
            <div class="col-xs-10">
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="control-label col-xs-2">Lösenord:</label>
            <div class="col-xs-10">
                <input type="password" id="password" name="_password" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <button type="submit" class="btn btn-primary">Logga in</button>
            </div>
        </div>
    </form>

    <a href="{{ path('account_register') }}">Skapa konto</a>

{% endblock %}